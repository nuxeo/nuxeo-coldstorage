{
  "extends": "airbnb-base",
  "rules": {
    "class-methods-use-this": "off",
    "import/extensions": ["error", "always", {"ignorePackages": true}],
    "no-underscore-dangle": "off",
    "function-paren-newline": "off"
  },
  "env": {
    "browser": true
  },
  "plugins": ["html"],
  "settings": {
    "html/indent": "+2",
    "html/report-bad-indent": "error"
  },
  "globals": {
    "Nuxeo": false,
    "Polymer": false
  }
}
