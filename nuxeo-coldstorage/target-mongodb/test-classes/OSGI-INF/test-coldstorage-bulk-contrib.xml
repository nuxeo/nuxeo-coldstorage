<?xml version="1.0"?>
<component
  name="org.nuxeo.coldstorage.bulk.test.contrib">

  <require>org.nuxeo.coldstorage.bulk.contrib</require>
  <extension target="org.nuxeo.ecm.core.bulk" point="actions">
    <!-- set batch size to 1 for test purpose in order to create race concurrency
      and allow to detect documents are not queued many times -->
    <action name="propagateMoveToColdStorage" bucketSize="100" batchSize="1" httpEnabled="false" />
    <action name="propagateRestoreFromColdStorage" bucketSize="100" batchSize="1" httpEnabled="false" />
  </extension>

</component>
