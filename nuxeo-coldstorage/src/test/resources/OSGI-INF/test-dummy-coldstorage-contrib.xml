<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.coldstorage.test">

    <extension target="org.nuxeo.ecm.core.blob.BlobManager" point="configuration">
        <blobprovider name="inMemory">
            <class>org.nuxeo.ecm.core.blob.InMemoryBlobProvider</class>
        </blobprovider>
        <blobprovider name="dummy">
            <class>org.nuxeo.coldstorage.blob.providers.DummyBlobProvider</class>
        </blobprovider>
    </extension>
    <extension target="org.nuxeo.ecm.core.blob.DocumentBlobManager" point="configuration">
        <blobdispatcher>
            <class>org.nuxeo.ecm.core.blob.DefaultBlobDispatcher</class>
            <property name="blob:xpath=coldstorage:coldContent">dummy</property>
            <property name="default">inMemory</property>
        </blobdispatcher>
    </extension>

    <!--WIP to be extracted on its own file-->
    <extension target="org.nuxeo.ecm.core.bulk" point="actions">
        <action name="deduplicationColdContent" bucketSize="100" batchSize="50" httpEnabled="false" />
    </extension>

    <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">
        <streamProcessor name="deduplicationColdContent"
                         class="org.nuxeo.ecm.automation.core.operations.coldstorage.DeduplicationColdContentActions"
                         logConfig="bulk" defaultConcurrency="2"
                         defaultPartitions="2">
            <policy name="default" maxRetries="3" delay="1s" maxDelay="10s" continueOnFailure="true" />
            <option name="produceImmediate">false</option>
        </streamProcessor>
    </extension>

</component>
